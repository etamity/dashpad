{
    "name": "dashpad",
    "version": "1.1.0",
    "description": "A hackable universal dashboard framework for your desktop task automation and vistualise tooling.",
    "author": {
        "name": "Joey Etamity",
        "github": "https://github.com/etamity/dashpad"
    },
    "workspaces": ["packages/*"],
    "keywords": [
        "dashboard",
        "framework",
        "electron",
        "node",
        "sass",
        "ui kit",
        "generic",
        "automation",
        "task"
    ],
    "license": "MIT",
    "private": true,
    "main": "./packages/electron/src/main.js",
    "bin": {
        "dashpad": "packages/cli/command.js"
    },
    "proxy": "http://localhost:8888",
    "devDependencies": {
        "lerna": "^3.16.4"
    },
    "scripts": {
        "postinstall":
        "ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=1 electron-builder install-app-deps",
        "server": "cd packages/webpack && yarn server",
        "package": "lerna run package --scope @dashpad/config --stream",
        "start": "cd packages/webpack && yarn start",
        "develop": "cd packages/webpack && yarn develop",
        "build": "cd packages/webpack && yarn build:dashpad",
        "dev:docs": "cd packages/webpack && yarn dev:docs:web",
        "build:docs": "cd packages/webpack && yarn build:docs",
        "bundle:mac": "ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=1 electron-builder --dir",
        "bundle": "electron-webpack",
        "pack:mac": "yarn build && electron-builder --mac",
        "pack:win": "yarn build && electron-builder --win",
        "test": "react-app-rewired test",
        "test:debug": "react-app-rewired --inspect-brk test --runInBand",
        "eject": "react-scripts eject",
        "clean": "rimraf ./build",
        "pretty": "prettier --write '**/*.js'",
        "killport": "kill -9 $(lsof -t -i:8888)"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 9",
        "not op_mini all"
    ]
}
