{
    "name": "dashpad",
    "version": "1.2.0",
    "description": "A hackable universal dashboard framework for your desktop task automation and vistualise tooling.",
    "author": {
        "name": "Joey Etamity",
        "github": "https://github.com/etamity/dashpad"
    },
    "workspaces": [
        "packages/*"
    ],
    "keywords": [
        "dashboard",
        "framework",
        "electron",
        "node",
        "sass",
        "ui kit",
        "generic",
        "automation",
        "task"
    ],
    "license": "MIT",
    "private": true,
    "main": "./packages/electron/main.js",
    "bin": {
        "dashpad": "packages/cli/command.js"
    },
    "proxy": "http://localhost:8888",
    "dependencies": {
        "@babel/register": "^7.4.0",
        "@dashpad/config": "*",
        "@dashpad/core": "*",
        "@dashpad/electron": "*",
        "@dashpad/frontend": "*",
        "@dashpad/babel-preset": "*",
        "@octokit/rest": "^16.17.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.5.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-dev-expression": "^0.2.1",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.2",
        "commander": "^2.19.0",
        "dotenv": "^6.1.0",
        "fs-extra": "^7.0.1",
        "js-yaml": "^3.12.1",
        "json-server": "^0.14.0",
        "keymirror": "^0.1.1",
        "lodash-id": "^0.14.0",
        "lowdb": "^1.0.0",
        "moment": "^2.24.0",
        "rimraf": "^2.6.2"
    },
    "devDependencies": {
        "husky": "^3.0.9",
        "lerna": "^3.16.4"
    },
    "scripts": {
        "postinstall": "node scripts/index.js",
        "server": "lerna run start --stream --scope=@dashpad/webpack",
        "package": "lerna run package --scope @dashpad/config --stream",
        "start": "lerna exec --scope=@dashpad/webpack -- yarn start --color",
        "develop": "lerna run develop --stream --scope=@dashpad/webpack",
        "build": "NODE_OPTIONS=--max_old_space_size=4096 lerna run build:dashpad --stream --scope=@dashpad/webpack",
        "dev:docs": "lerna run dev:docs:web --stream --scope=@dashpad/webpack",
        "build:docs": "lerna run build:docs --stream --scope=@dashpad/webpack && react-snap",
        "pack:mac": "electron-builder --mac",
        "pack:win": "yarn build && electron-builder --win",
        "test": "react-app-rewired test",
        "eject": "react-scripts eject",
        "clean": "lerna clean && rimraf ./build",
        "pretty": "prettier --write 'packages/**/*.js'",
        "killport": "kill -9 $(lsof -t -i:8888)",
        "snap": "react-snap",
        "update": "node scripts/index.js"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 9",
        "not op_mini all"
    ]
}
